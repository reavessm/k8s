{
  "kind": "Pod",
  "apiVersion": "v1",
  "metadata": {
    "name": "kube-apiserver",
    "namespace": "kube-system",
    "labels": {
      "component": "kube-apiserver",
      "tier": "control-plane"
    }
  },
  "spec": {
    "volumes": [
      {
        "name": "pki",
        "hostPath": {
          "path": "/etc/kubernetes"
        }
      },
      {
        "name": "ca-certs",
        "hostPath": {
          "path": "/etc/ssl/certs"
        }
      },
      {
        "name": "ca-certs-etc-pki",
        "hostPath": {
          "path": "/etc/pki"
        }
      }
    ],
    "containers": [
      {
        "name": "kube-apiserver",
        "image": "{{ api_image }}",
        "command": [
          "/usr/local/bin/kube-apiserver",
          "--v=0",
          "--insecure-bind-address=127.0.0.1",
          "--admission-control=NamespaceLifecycle,LimitRanger,ServiceAccount,PersistentVolumeLabel,DefaultStorageClass,DefaultTolerationSeconds,MutatingAdmissionWebhook,ValidatingAdmissionWebhook,ResourceQuota,Initializers",
          "--service-cluster-ip-range={{ service_ip_range }}",
          "--service-account-key-file={{ account_key }}",
          "--client-ca-file={{ ca_cert }}",
          "--tls-cert-file={{ api_cert }}",
          "--tls-private-key-file={{ api_key }}",
          "--secure-port={{ api_secure_port }}",
          "--allow-privileged",
	  "--advertise-address={{ lb_ip }}",
	  "--anonymous-auth=false",
          "--requestheader-client-ca-file={{ ca_cert }}",
          "--requestheader-extra-headers-prefix=X-Remote-Extra-",
          "--requestheader-group-headers=X-Remote-Group",
          "--requestheader-username-headers=X-Remote-User",
          "--proxy-client-cert-file={{ api_cert }}",
          "--proxy-client-key-file={{ api_key }}",
          "--runtime-config=api/all=true",
          "--requestheader-allowed-names=aggregator,kube-admin",
	  {% if auth_mode == 'RBAC' -%}
          "--authorization-mode={{ auth_mode }}",
	  {% else %}
	  "--authorization-mode={{ auth_mode }}",
	  "--basic-auth-file={{ auth_file }}",
          "--authorization-policy-file={{ policy_file }}",
	  {% endif -%}
          {% if etcd_peer_url_scheme == 'https' -%}
          "--etcd-cafile={{ etcd_ca_file }}",
          "--etcd-certfile={{ etcd_cert_file }}",
          "--etcd-keyfile={{ etcd_key_file }}",
          {% endif -%} 
          "--etcd-servers={% for node in groups['etcd'] %}{{ etcd_peer_url_scheme }}://{{ node }}:2379{% if not loop.last %},{% endif %}{% endfor %}"
        ],
        "resources": {
          "requests": {
            "cpu": "250m"
          }
        },
        "volumeMounts": [
          {
            "name": "ca-certs",
            "readOnly": true,
            "mountPath": "/etc/ssl/certs"
          },
          {
            "name": "ca-certs-etc-pki",
            "readOnly": true,
            "mountPath": "/etc/pki"
          },
          {
            "name": "pki",
            "readOnly": true,
            "mountPath": "/etc/kubernetes/"
          }
        ],
        "livenessProbe": {
          "httpGet": {
            "path": "/healthz",
            "port": 8080,
            "host": "127.0.0.1"
          },
          "initialDelaySeconds": 15,
          "timeoutSeconds": 15
        }
      }
    ],
    "hostNetwork": true
  }
}
